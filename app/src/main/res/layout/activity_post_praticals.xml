<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"

    tools:context=".postPraticals">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/pratical2_icon"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Pratical"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/bungee"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/pnameupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pratical Title"
        android:textSize="22sp"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/uploadp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="#000099"
        android:textColor="#fff"
        android:text="Upload"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/viewp_uploaded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6666ff"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:text="View Uploads"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:onClick="btn_actionprac"/>

</LinearLayout>