<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"

    tools:context=".studentAssignmentUpload">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/assignment2_icon"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Assignment"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/bungee"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/studentAssign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment Title"
        android:textSize="22sp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btn_submitAssignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="#000099"
        android:textColor="#fff"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/viewSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6666ff"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:text="View Submitted Assignment"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:onClick="viewSubmit"/>

</LinearLayout>